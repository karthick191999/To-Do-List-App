<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tCollapsingLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#0896BB">

        <EditText
            android:id="@+id/businessInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF" />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bussfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/tCollapsingLayout"
        app:layout_anchorGravity="bottom|end"
        android:backgroundTint="#0896BB"
        app:srcCompat="@drawable/tick"
        android:tint="@android:color/white" />

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <com.example.karthik.remainder.CircularImageView

            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/date1" />

        <TextView
            android:id="@+id/textView"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date deadline"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Date deadline"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="250dp">

        <com.example.karthik.remainder.CircularImageView

            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/time" />

        <TextView

            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Deadline"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="00:00"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/paidL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="300dp">

        <com.example.karthik.remainder.CircularImageView

            android:id="@+id/imagePaid"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/paid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money Paid"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/paidMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:text="$00.00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dueL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="350dp">

        <com.example.karthik.remainder.CircularImageView

            android:id="@+id/imageDue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/due" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money Due"
            android:textSize="20sp"

            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dueMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="$00.00"
            android:textSize="20sp" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
